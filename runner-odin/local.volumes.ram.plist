
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

  <key>Label</key>
  <string>local.volumes.ram</string>

  <key>StandardOutPath</key>
  <string>/var/log/local.volumes.ram.stdout.log</string>
  
  <key>StandardErrorPath</key>
  <string>/var/log/local.volumes.ram.stderr.log</string>

  <key>ProgramArguments</key>
  <array>
    <string>/bin/sh</string>
    <string>-c</string>
    <string>diskutil erasevolume HFS+ "RAM" $(diskutil image attach ram://4GiB)</string>
  </array>

  <key>RunAtLoad</key>
  <true />
</dict>
</plist>
